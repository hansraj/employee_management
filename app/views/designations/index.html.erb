<div id = "wrapper">
  <%= render :partial => '/layouts/admin/top' %>
  <div id = "container">
    <%= render :partial => '/plugins/category' %>
    <div id = "rightinner">
      <div id = "titlegreenleft">
        <div class="greentitle"><img src="/images/content.png" style="vertical-align:middle; margin-right:8px;" />Content Management</div>
      </div>
      <br/><br/>
      <div id = "matterinner">
        <div id = "innerlinks"> 
          <span class="link"><%= link_to "Employees" , employees_path  %></span> |
          <span class="link"><%= link_to "Departments" , departments_path  %></span> |
          <span class="link"><%= link_to "Designations" , designations_path  %></span> 
        </div>
			  <br/>
        <h3> Departments </h3>
        <%= error_messages_for 'designation' %>
			  <br/>
        <table width="601" border="1" cellspacing="0" cellpadding="0" bordercolor="#c5c3c3">
          <tr>
            <th width="54" align="center" valign="middle">Designation ID</td>
            <th width="94" align="center" valign="middle">Name</th>
            <th width="83" align="center" valign="middle">Description</th>
            <th width="83" align="center" valign="middle">Action</th>
          </tr>
          <% @designations.each do |designation| %>
            <tr> 
              <td align="center" valign="middle"><%= designation.id %></td>
              <td align="center" valign="middle"><%= designation.name %></td>
              <td align="center" valign="middle"><%= designation.description %></td>
              <td align="center" valign="middle" class="tablelinks">
                <%= link_to "Edit", edit_designation_path(designation) %>|
                <%= link_to "Delete", designation_path(designation), :method => "delete" %>
              </td>
            </tr>
          <% end %>
        </table>
        <br/>
        <div class="greenbut" style="margin-left:250px; _margin-left:120px;">
          <%= link_to "Add New", new_designation_path, :rel => "#overlay10" %>
        </div>
        <br/> <br/>
      </div>
      <div id = "rightinnerbottom"></div>
    </div>
    <div style="clear:both"></div>
  </div><br/><br/><br/>
</div>
